<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asm2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ASM2">

        <!-- Launcher Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Register -->
        <activity android:name=".RegisterActivity" android:exported="true"/>
        <!-- Main -->
        <activity android:name=".MainActivity" android:exported="true"/>
        <!-- Expense -->
        <activity android:name=".ExpenseActivity" android:exported="true"/>
        <!-- Edit Expense -->
        <activity android:name=".EditExpenseActivity" android:exported="true"/>
        <!-- Budget -->
        <activity android:name=".BudgetActivity" android:exported="true"/>

    </application>
</manifest>
